# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=admit_genie
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRE=7d

# Free LLM API Configuration (CometAPI - Free Unlimited)
# Sign up at: https://api.cometapi.com/
COMET_API_KEY=your_comet_api_key_here
COMET_API_BASE_URL=https://api.cometapi.com/v1
COMET_MODEL=gpt-3.5-turbo

# Alternative LLM Configuration (for backward compatibility)
LLM_API_KEY=your_llm_api_key_here
LLM_API_BASE_URL=https://api.llm_provider.com/v1
LLM_MODEL=your_preferred_model

# Server Configuration
PORT=5000
FRONTEND_URL=http://localhost:3000

# Admin Registration Key (for secure admin registration)
# Generate a secure key: openssl rand -hex 32
ADMIN_REGISTRATION_KEY=your_secure_admin_registration_key

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development/Testing Configuration
# Set to true to enable detailed logging
DEBUG=false

# Production Configuration (uncomment for production)
# NODE_ENV=production
# LOG_LEVEL=warn
# ENABLE_CORS_ORIGIN=https://your-frontend-domain.com